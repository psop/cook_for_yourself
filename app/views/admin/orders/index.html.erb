<h2>Order Lists </h2>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>No.</th>
      <th>Created at</th>
      <th>User</th>
      <th>State</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td> <%= link_to order.id, admin_order_path(order) %> </td>
      <td> <%= order.created_at.to_s(:long) %> </td>
      <td> <%= order.user.email %></td>
      <td> <%= render_order_state(order) %> </td>
    </tr>
    <% end %>

  </tbody>
</table>