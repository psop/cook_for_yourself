<div class="row">
  <div class="col-md-12">

    <h2> Order Info </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">Order Items</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>

        <% @order_items.each do |order_item| %>
          <tr>
            <td>
              <%= order_item.product_name %>
            </td>
            <td>
              <%= order_item.price %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        Total <%= @order.total %> NTD
      </span>
    </div>

     <hr>

     <h2> Shipping Info </h2>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            Sender
          </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.billing_name %> - <%= @order_info.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            Recipient
          </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.shipping_name %> - <%= @order_info.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
    <% if !@order.is_paid? %>
      <div class="pull-right">
        <%= link_to "以信用卡付款", pay_with_credit_card_order_path(@order.token), class: "btn btn-lg btn-danger" %>
        <%= link_to "以 ATM 付款", "#", class: "btn btn-lg btn-danger" %>
      </div>
    <% else %>
      <p class="text-center">You already paid.</p>
    <% end %>
  </div>
</div>